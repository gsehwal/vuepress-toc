
.navbar {
	background-image: linear-gradient(90deg,#94103e 0,#db004d);
	clip-path: polygon(100% 100%,100% 0,-300% 0);
	
}
.navbar .site-name {
    font-size: 1.3rem;
    font-weight: 600;
    color: #ffffff;
	top: -0.2rem;
    position: relative;
}
hr {
    display: block;
    unicode-bidi: isolate;
    
    -webkit-margin-after: 0.5em;
    -webkit-margin-start: auto;
    -webkit-margin-end: auto;
    overflow: hidden;
    border-style: inset;
    border-width: 1px;
}

.sidebar-button .icon {
    display: block;
    width: 1.25rem;
    height: 1.25rem;
	color: #ffffff;

}
.sidebar-button {
    
    width: 1.25rem;
    height: 1.25rem;
    position: absolute;
    padding: 0.6rem;
    top: 0.3rem;
    left: 1rem;
}

.table-of-contents {
	background-color: snow;
	font-family: 'Roboto Condensed', sans-serif;
	font-size:1.2rem;
	
}
a {
    font-weight: 400;
    color: green;
	line-height:1.2rem
    text-decoration: none;
}

ul {
	font-weight: 400;
	color: green
}

.button{
    color: #fff;
    background-color: #28a745;
    border-color: #28a745;
    cursor: pointer;
    float:right;
    display: inline-block;
    font-weight: 400;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    border: 1px solid transparent;
    padding: 0.3rem 0.5rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}
.toc{
    background: aliceblue;
    font-size:1.6rem;
    color:green;
    -webkit-margin-after: 0.1em;
}