
.navbar {
	background-image: linear-gradient(90deg,#94103e 0,#db004d);
	clip-path: polygon(100% 100%,100% 0,-300% 0);
	
}
.navbar .site-name {
    font-size: 1.3rem;
    font-weight: 600;
    color: #ffffff;
	top: -0.2rem;
    position: relative;
}
hr {
    display: block;
    unicode-bidi: isolate;
    
    -webkit-margin-after: 0.5em;
    -webkit-margin-start: auto;
    -webkit-margin-end: auto;
    overflow: hidden;
    border-style: inset;
    border-width: 1px;
}

.sidebar-button .icon {
    display: block;
    width: 1.25rem;
    height: 1.25rem;
	color: #ffffff;

}
.sidebar-button {
    
    width: 1.25rem;
    height: 1.25rem;
    position: absolute;
    padding: 0.6rem;
    top: 0.3rem;
    left: 1rem;
}

.table-of-contents {
	background-color: snow;
	font-family: 'Roboto Condensed', sans-serif;
	font-size:1.2rem;
	
}
a {
    font-weight: 400;
    color: green;
	line-height:1.2rem
    text-decoration: none;
}

ul {
	font-weight: 400;
	color: green
}